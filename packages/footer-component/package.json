{
  "name": "@molgenis/molgenis-footer-component",
  "license": "LGPL-3.0+",
  "version": "0.4.0",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name footer-component src/components/FooterComponent.vue",
    "lint": "vue-cli-service lint",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit",
    "preversion": "yarn install; yarn test:unit; yarn test:e2e --env ci_chrome,ci_safari,ci_ie11,ci_firefox",
    "postversion": "yarn build"
  },
  "main": "dist/footer-component.umd.js",
  "publishConfig": {
    "access": "public",
    "registry": "http://registry.npmjs.org"
  },
  "browser": {
    "./sfc": "src/components/FooterComponent.vue"
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "dependencies": {
    "@molgenis/molgenis-api-client": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@vue/cli-plugin-babel": "^3.3.0",
    "@vue/cli-plugin-e2e-nightwatch": "^3.3.0",
    "@vue/cli-plugin-eslint": "^3.3.0",
    "@vue/cli-plugin-typescript": "^3.3.0",
    "@vue/cli-plugin-unit-jest": "^3.3.0",
    "@vue/cli-service": "^3.3.1",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/eslint-config-typescript": "^3.2.1",
    "@vue/test-utils": "^1.0.0-beta.28",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.12.1",
    "eslint-plugin-vue": "^5.1.0",
    "geckodriver": "^1.14.1",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4",
    "vue": "^2.5.22",
    "vue-template-compiler": "^2.5.22"
  },
  "peerDependencies": {
    "bootstrap": "^4.1.*",
    "jquery": "^3.3.*",
    "popper.js": "^1.14.*"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard",
      "@vue/typescript"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "typescript-eslint-parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@molgenis/molgenis-api-client)"
    ],
    "testURL": "http://localhost/"
  }
}
